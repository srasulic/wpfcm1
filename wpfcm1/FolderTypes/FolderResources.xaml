<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cal="http://www.caliburnproject.org">
    <Style TargetType="DataGridColumnHeader" x:Key="CheckBoxHeaderStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <CheckBox Margin="5,0,0,0" cal:Message.Attach="[Event Checked] = [Action OnCheck($executionContext)]; [Event Unchecked] = [Action OnCheck($executionContext)]" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="ToolTip" Value="Označavanje selektovanih" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>