<UserControl x:Class="wpfcm1.FolderTypes.ConfirmedFolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:wpfcm1.Converters"
             xmlns:cal="http://www.caliburnproject.org">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="FolderResources.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <BitmapImage x:Key="PngError" UriSource="../Media/error16.png" />
                <BitmapImage x:Key="PngOk" UriSource="../Media/ok16.png" />
                <BitmapImage x:Key="PngLock" UriSource="../Media/lock16.png" />
                <BitmapImage x:Key="PngWait" UriSource="../Media/time16.png" />
                <BitmapImage x:Key="PngGreenPdf" UriSource="../Media/green_pdf_plain16.png" />
                <BitmapImage x:Key="PngAck" UriSource="../Media/ack16.png" />
                <BooleanToVisibilityConverter x:Key="b2vc" />
                <conv:InverseBooleanToVisibilityConverter x:Key="ib2vc" />
                <conv:InverseBooleanToBoldConverter x:Key="ib2bc" />
                <DataTemplate x:Key="SSCol">
                    <StackPanel>
                        <Image Source="{StaticResource PngLock}" Visibility="{Binding Path=HasSecondSigniture, Converter={StaticResource b2vc}}"/>
                        <Image Source="{StaticResource PngAck}" Visibility="{Binding Path=HasSecondSigniture, Converter={StaticResource ib2vc}}"/>
                    </StackPanel>
                </DataTemplate>
                <DataTemplate x:Key="SignedAgainCol">
                    <Image Source="{StaticResource PngWait}" Visibility="{Binding Path=IsSignedAgain, Converter={StaticResource b2vc}}"/>
                </DataTemplate>
            </ResourceDictionary>
        </Grid.Resources>

        <DataGrid x:Name="Documents" cal:Message.Attach="[Event SelectionChanged] = [Action OnSelectionChanged($eventArgs)]"
                  AutoGenerateColumns="False" CanUserAddRows="false" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsChecked}" HeaderStyle="{StaticResource CheckBoxHeaderStyle}"/>
                <DataGridTextColumn Header="Naziv fajla" Binding="{Binding Path=DocumentInfo.Name}" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="{Binding Processed, Converter={StaticResource ib2bc}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Pib izdavalac" Binding="{Binding Path=namePib1}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Pib primalac" Binding="{Binding Path=namePib2}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Br Dok" Binding="{Binding Path=nameDocNum}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Path=nameDate}" IsReadOnly="True" />
                <DataGridTextColumn Header="Size" Binding="{Binding Path=LengthKB, StringFormat='\{0:N0\} KB'}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="SS" CellTemplate="{StaticResource SSCol}" MinWidth="32" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Signed Again" CellTemplate="{StaticResource SignedAgainCol}" MinWidth="32" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
