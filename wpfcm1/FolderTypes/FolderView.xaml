<UserControl x:Class="wpfcm1.FolderTypes.FolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" Name="PreviewColumn"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="Documents" AutoGenerateColumns="False" 
                  CanUserAddRows="false" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=DocumentInfo.Name}"/>
                <DataGridTextColumn Header="Date modified" Binding="{Binding Path=DocumentInfo.LastWriteTime}" />
                <DataGridTextColumn Header="Size" Binding="{Binding Path=DocumentInfo.Length}" />
            </DataGrid.Columns>
        </DataGrid>
        
        <GridSplitter Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="2" />
        <ContentControl Grid.Row="0" Grid.Column="2" x:Name="Preview" />
    </Grid>
</UserControl>
