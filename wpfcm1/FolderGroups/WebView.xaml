<UserControl x:Class="wpfcm1.FolderGroups.WebView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="1" 
    		VerticalAlignment="Top"
    		FontWeight="Light"
    		FontSize="34"
    		FontFamily="Segoe UI" ><Run Text="Online report"/>
        </TextBlock>
        <ContentControl Grid.Row="1" Grid.Column="1" Margin="5,11,5,5">
            <WebBrowser Source="https://polisign.net/polisignnovosti" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        </ContentControl>

        
    </Grid>
</UserControl>
