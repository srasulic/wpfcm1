<UserControl x:Class="wpfcm1.Views.FolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DataGrid x:Name="Documents" AutoGenerateColumns="False" CanUserAddRows="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=DocumentInfo.Name}"/>
                <DataGridTextColumn Header="Date modified" Binding="{Binding Path=DocumentInfo.LastWriteTime}" />
                <DataGridTextColumn Header="Size" Binding="{Binding Path=DocumentInfo.Length}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
