<UserControl x:Class="wpfcm1.Views.CertificatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org">
    <Grid>
        <ComboBox x:Name="Certificates" DisplayMemberPath="CertificateSimpleName" IsSynchronizedWithCurrentItem="True"
                  cal:Message.Attach="[Event SelectionChanged] = [Action OnSelection($this)]; [EventLoaded] = [Action OnSelection($this)]"
        />
    </Grid>
</UserControl>
