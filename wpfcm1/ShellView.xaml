<UserControl x:Class="wpfcm1.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="500" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="CertVM" />
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Button Content="Home" Width="96" x:Name="ShowHome"/>
            <Button Content="Sync" Width="96" />
            <Button Content="Settings" Width="96" />
        </StackPanel>
        <ContentControl Grid.Row="1" Grid.ColumnSpan="2"  x:Name="ActiveItem" />
    </Grid>
</UserControl>
