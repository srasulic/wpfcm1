<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Templejt koji na dnu sadrzi ok i cancel button -->
    <ControlTemplate x:Key="Decorator" TargetType="ContentControl">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentPresenter />
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="4" HorizontalAlignment="Right">
                <Button Content="Close" Width="96" Height="32" x:Name="OnClose" />
                <Button Content="Cancel" Width="96" Height="32" x:Name="OnCancel" />
            </StackPanel>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>