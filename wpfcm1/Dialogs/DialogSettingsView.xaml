<mah:MetroWindow x:Class="wpfcm1.Dialogs.DialogSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    ShowCloseButton="False" ShowMinButton="False" ShowMaxRestoreButton="False"
    WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1" FontSize="14"
    Width="600" Height="600"
    >
    <Grid Margin="5">
        <Grid.RowDefinitions >
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="Root folder" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Archive folder" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Name" VerticalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Firma" VerticalAlignment="Center"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Varijacija" VerticalAlignment="Center"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Timestamp server" VerticalAlignment="Center"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Timestamp username" VerticalAlignment="Center"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Timestamp password" VerticalAlignment="Center"/>
        <Label Grid.Row="8" Grid.Column="0" Content="Potpis offset" VerticalAlignment="Center"/>
        <Label Grid.Row="9" Grid.Column="0" Content="Api URL" VerticalAlignment="Center"/>
        <Label Grid.Row="10" Grid.Column="0"  Content="Polisa za arhiviranje" VerticalAlignment="Center"/>

        <TextBox Grid.Row="0" Grid.Column="1" Margin="8" VerticalAlignment="Center" Text="{Binding Path=UserTemp.RootFolder, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="8" VerticalAlignment="Center" Text="{Binding Path=UserTemp.ArchiveFolder, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="8" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.UserName,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="8" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.PIB, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="8" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.Variation, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="8" VerticalAlignment="Center" Text="{Binding Path=UserTemp.TimestampServer, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="8" VerticalAlignment="Center" Text="{Binding Path=UserTemp.TimestampUserName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="8" VerticalAlignment="Center" Text="{Binding Path=UserTemp.TimestampPassword, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

        <Grid Grid.Row="8" Grid.Column="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="x-L:" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.XSigShift, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="2" Text="y-L:" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Column="3" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.YSigShift, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="4" Text="x-D:" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Column="5" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.XSigShiftRight, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="6" Text="y-D:" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Column="7" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Path=UserTemp.YSigShiftRight, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <TextBox Grid.Row="9" Grid.Column="1" Margin="8" IsReadOnly="True"  Text="{Binding Path=UserTemp.ApiURL, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <ComboBox Grid.Row="10" Grid.Column="1" Margin="8" Text="{Binding Path=UserTemp.ArchivePolicy, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem>BASIC</ComboBoxItem>
            <ComboBoxItem>GROUP_RENAME</ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2"  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="OK" MinWidth="64" x:Name="OnClose" Margin="8"/>
            <Button Content="Cancel"  MinWidth="64" x:Name="OnCancel" Margin="8"/>
        </StackPanel>
        
    </Grid>
</mah:MetroWindow>
